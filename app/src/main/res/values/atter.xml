<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="RippleBackground">
        <attr name="rb_color" format="color" />
        <attr name="rb_strokeWidth" format="dimension"/>
        <attr name="rb_radius" format="dimension"/>
        <attr name="rb_duration" format="integer"/>
        <attr name="rb_rippleAmount" format="integer"/>
        <attr name="rb_scale" format="float"/>
        <attr name="rb_type" format="enum">
            <enum name="fillRipple" value="0"/>
            <enum name="strokeRipple" value="1"/>
        </attr>



    </declare-styleable>

    <declare-styleable name="SwipeButton">
        <attr name="swipeText" format="string"/>
        <attr name="swipeFontFamily" format="reference"/>
        <attr name="swipeTextSize" format="dimension"/>
        <attr name="swipeTextColor" format="color"/>
        <attr name="swipeDrawable" format="reference"/>
        <attr name="swipeThumbColor" format="color"/>
        <attr name="swipeProgressColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="advDrawerLayout">
        <attr name="adl_customBehavior" format="boolean" />
        <attr name="adl_viewScale" format="float" />
        <attr name="adl_viewScrimColor" format="color" />
        <attr name="adl_viewElevation" format="dimension" />
        <attr name="adl_drawerElevation" format="dimension" />
        <attr name="adl_cardBackgroundColor" format="reference|color" />
    </declare-styleable>


    <declare-styleable name="WaveformSeekBar">
        <attr name="wave_progress" format="float" />
        <attr name="wave_max_progress" format="float" />
        <attr name="wave_visible_progress" format="float" />
        <attr name="wave_width" format="dimension" />
        <attr name="wave_gap" format="dimension" />
        <attr name="wave_padding_top" format="dimension" />
        <attr name="wave_padding_Bottom" format="dimension" />
        <attr name="wave_padding_left" format="dimension" />
        <attr name="wave_padding_right" format="dimension" />
        <attr name="wave_min_height" format="dimension" />
        <attr name="wave_corner_radius" format="dimension" />
        <attr name="wave_background_color" format="color" />
        <attr name="wave_progress_color" format="color" />
        <attr name="wave_gravity" format="enum">
            <enum name="top" value="0" />
            <enum name="center" value="1" />
            <enum name="bottom" value="2" />
        </attr>
        <attr name="marker_width" format="dimension" />
        <attr name="marker_color" format="color" />
        <attr name="marker_text_size" format="dimension" />
        <attr name="marker_text_color" format="color" />
        <attr name="marker_text_padding" format="dimension" />
    </declare-styleable>
    <declare-styleable name="WaveSlider">
        <attr name="barWidth" format="dimension" />
        <attr name="maxBarHeight" format="integer" />
        <attr name="width" format="dimension" />
    </declare-styleable>


    <declare-styleable name="AudioTrimmerView">
        <attr name="atv_window_left_bar" format="reference"/>
        <attr name="atv_window_right_bar" format="reference"/>
        <attr name="atv_window_thumb" format="reference"/>
        <attr name="atv_window_thumb_width" format="reference"/>
        <attr name="atv_window_bar_width" format="dimension"/>
        <attr name="atv_window_border_width" format="dimension"/>
        <attr name="atv_window_border_color" format="color"/>
        <attr name="atv_overlay_color" format="color"/>
    </declare-styleable>

    <declare-styleable name="AudioRecordView">

        <attr name="chunkWidth" format="dimension" />
        <attr name="chunkMaxHeight" format="dimension" />
        <attr name="chunkMinHeight" format="dimension" />
        <attr name="chunkSpace" format="dimension" />
        <attr name="chunkColor" format="color" />
        <attr name="chunkRoundedCorners" format="boolean" />
        <attr name="chunkAlignTo" format="enum">
            <enum name="center" value="1" />
            <enum name="bottom" value="2" />
        </attr>
        <attr name="direction" format="enum">
            <enum name="rightToLeft" value="1" />
            <enum name="leftToRight" value="2" />
        </attr>
        <attr name="chunkSoftTransition" format="boolean" />
    </declare-styleable>
</resources>